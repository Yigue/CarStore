# Archivo de ejemplo de variables de entorno para CarStore
# Copia este archivo como .env y ajusta los valores según tu entorno

# Configuración de la aplicación
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_HTTP_PORTS=8080
ASPNETCORE_HTTPS_PORTS=8081

# Base de datos PostgreSQL
POSTGRES_DB=carstore
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Cadena de conexión completa
CONNECTION_STRING=Host=postgres;Port=5432;Database=carstore;Username=postgres;Password=postgres;

# JWT Configuration
JWT_SECRET=super-duper-secret-value-that-should-be-in-user-secrets
JWT_ISSUER=clean-architecture
JWT_AUDIENCE=developers
JWT_EXPIRATION_IN_MINUTES=60

# Azure Blob Storage (opcional)
AZURE_BLOB_CONNECTION_STRING=
AZURE_BLOB_CONTAINER_NAME=

# Redis (opcional)
REDIS_CONNECTION_STRING=localhost:6379

# Seq Logging
SEQ_SERVER_URL=http://seq:5341

# Docker Registry (opcional)
DOCKER_REGISTRY=

# Configuración de desarrollo
DEVELOPMENT_MODE=true
ENABLE_SWAGGER=true
ENABLE_CORS=true
